{
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    },
    {
      "source": "/Manasapujha_Resume.pdf",
      "headers": [
        { "key": "Content-Disposition", "value": "attachment; filename=\"Manasapujha_G_R_Resume.pdf\"" }
      ]
    }
  ]
}
